<p id="notice"><%= notice %></p>

<h3>Clientes Cadastrados</h3>

<table class="table table-bordered table-hover container">
  <thead class="text-light">
    <tr>
      <th>#</th>
      <th>Nome</th>
      <th>Cpf</th>
      <th >Opções</th>
    </tr>
  </thead>

  <tbody>
    <% @pessoafisicasAll.each do |pessoafisica| %>
      <tr>
        <td style="width:40px"><%= pessoafisica.id %></td>
        <td><%= pessoafisica.nome %></td>
        <td style="width:190px"><%= formatCpf(pessoafisica.cpf) %></td>
        <td style="width:90px; text-align:center"><%= link_to edit_pessoafisica_path(pessoafisica) do %>
              <i class="fa fa-edit mr-2 text-warning"></i>
            <% end %>
            <%= link_to pessoafisica, method: :delete do %>
              <i class="fa-solid fa-trash text-danger"></i>
            <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="text-center" >
  <%= paginate @pessoafisicas, theme: 'bootstrap-5', pagination_class: "pagination-sm flex-wrap justify-content-center",
                   nav_class: "d-inline-block"%>
</div>
<div class="d-flex justify-content-end col-12">
    <%= link_to "Cadastrar", new_pessoafisica_path, class:"btn btn-sm btn-success" %>
</div>
<div class="row actions text-end1">
  <div class="d-flex justify-content-start col-12">
    <div class="col-6 justify-content-center">
      <span style= "font-size: small">Total de Registros: <%= @pessoafisicasAll.count %></span>
    </div>
     <div class="col-6">
     <span style= "font-size: small"> CSV <a href="/pessoafisicas.csv"><i class="fa-solid fa-file-csv"></i></a></span>
    </div>
  </div>
  
