<%= form_with(model: estoque, local: true) do |form| %>
  <% if estoque.errors.any? %>
    <div id="error_explanation">
       <% if (estoque.errors.any?) %>
            <% estoque.errors.full_messages.each do |message| %>
            <div class="alert alert-sm alert-danger d-flex flex-row-end alert-dismissible fade show" role="alert" style="width:65%;">
              <i class="fa-solid fa-triangle-exclamation mr-2"></i><%= message %>
              <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
          <% end %>
        <% end %>
    </div>
  <% end %>

  <div class="field mb-3">
    <%= form.label t("fields.qtdentrada"), class: 'form-label' %>
    <%= form.number_field :qtdentrada, class:"form-control form-control-sm col-lg-6 col-sm-12"  %>
  </div>

  <div class="field mb-3">
    <%= form.label t("fields.qtdsaida"), class: 'form-label' %>
    <%= form.number_field :qtdsaida, class:"form-control form-control-sm col-lg-6 col-sm-12" %>
  </div>

  <div class="field mb-3">
    <%= form.label t("fields.dataentrada"), class: 'form-label' %>
    <%= form.date_field :dataentrada, class:"form-control form-control-sm col-lg-6 col-sm-12" %>
  </div>

  <div class="field mb-3">
    <%= form.label t("fields.datasaida"), class: 'form-label' %>
    <%= form.date_field :datasaida, class:"form-control form-control-sm col-lg-6 col-sm-12" %>
  </div>

  <div class="field mb-3">
    <%= form.label t("fields.valorentrada"), class: 'form-label' %>
    <%= form.number_field :valorentrada, class:"form-control form-control-sm col-lg-6 col-sm-12" %>
  </div>

  <div class="field mb-3">
    <%= form.label t("fields.valorsaida"), class: 'form-label'%>
    <%= form.number_field :valorsaida, class:"form-control form-control-sm col-lg-6 col-sm-12" %>
  </div>

  <div class="actions text-end row">
    <div class="d-flex justify-content-start col-6">
      <%= link_to t('fields.back'), estoques_path, class: "btn btn-sm btn-primary"  %>
    </div>
    <div class="d-flex justify-content-end col-6">
      <%= form.submit "Salvar", class: "btn btn-sm btn-success" %>
    </div>
  </div>
<% end %>
