<p id="notice"><%= notice %></p>

<h3>Estoque</h3>

<table class="table table-bordered table-hover">
  <thead class="text-light">
    <tr>
      <th>#</th>
      <th>Qtd. entrada</th>
      <th>Qtd. saida</th>
      <th>Data de entrada</th>
      <th>Data de saida</th>
      <th>Valor de entrada</th>
      <th>Valor de saida</th>
      <th colspan="3">Opções</th>
    </tr>
  </thead>

  <tbody>
    <% @estoquesAll.each do |estoque| %>
      <tr>
        <td><%= estoque.id %></td>
        <td><%= estoque.qtdentrada %></td>
        <td><%= estoque.qtdsaida %></td>
        <td><%= estoque.dataentrada %></td>
        <td><%= estoque.datasaida %></td>
        <td><%= estoque.valorentrada %></td>
        <td><%= estoque.valorsaida %></td>
        <td><%= link_to 'Show', estoque %>
            <%= link_to 'Edit', edit_estoque_path(estoque) %>
            <%= link_to 'Destroy', estoque, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="text-center" >
  <%= paginate @estoques, theme: 'bootstrap-5', pagination_class: "pagination-sm flex-wrap justify-content-center",
                   nav_class: "d-inline-block"%>
</div>
<div class="row actions text-end1">
  <div class="d-flex justify-content-start col-6">
    <div class="col-6">
      Total de Registros: <%= @estoquesAll.count %>
    </div>
     <div class="col-6">
      Gerar relatorio CSV <a href="/estoques.csv"><i class="fa-solid fa-file-csv"></i></a>
    </div>
  </div>
  <div class="d-flex justify-content-end col-6">
    <%= link_to "Cadastrar", new_estoque_path, class:"btn btn-sm btn-success" %>
  </div>
</div>
