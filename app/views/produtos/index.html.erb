<p id="notice"><%= notice %></p>


    <table class="table table-bordered">
        <thead>
            <tr>
              <th>#</th>
              <th>Nome do produto</th>
              <th>Data de validade</th>
              <th>Cod. barras</th>
              <th colspan="3">Opções</th>
            </tr>
        </thead>
        <tbody>
          <% i = 0 %>
          <% @produtos.each do |produto| %>
            <tr>
              <td><%= produto.id %></td>
              <td><%= produto.nomeproduto %></td>
              <td><%= formatarData(produto.dtavalidade) %></td>
              <td><%= produto.codbarras %></td>
              <td><%= link_to '', produto, class: "btn btn-primary fa fa-plus" %>
                  <%= link_to 'editar', edit_produto_path(produto), class: "btn btn-warning fa fa-pencil-square-o" %>
                  <%= link_to '', produto, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger fa fa-trash" %></td>
            </tr>
          <% end %>
        </tbody>
    </table>
    <div class="text-center">
      <%= paginate @produtos, theme: 'bootstrap-5', pagination_class: "pagination-sm flex-wrap justify-content-center" %>
    </div>
    <div style="text-align: right">
      <%= link_to "Cadastrar", new_produto_path, class:"btn btn-sm btn-success" %>
    </div>


